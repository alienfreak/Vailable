<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.austin.elliott.vailable.MainActivity"
    android:orientation="vertical"
    android:background="#ffff">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingTop="20dp"
            android:paddingBottom="25dp"
            android:background="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/profileLayout"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/welcomeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome\nAustin!"
                    android:fontFamily="sans-serif-light"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:paddingStart="10dp">

                    <ImageView
                        android:id="@+id/weatherIcon"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_wb_sunny_white_24dp"
                        android:paddingBottom="10dp"/>
                    <TextView
                        android:id="@+id/tempTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="72"
                        android:textSize="28sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight=".5"/>
                </LinearLayout>
            </LinearLayout>

            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/friendProfilePicture"
                android:paddingBottom="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".5"/>
        </LinearLayout>


        <include
            android:id="@+id/toolbclient"
            layout="@layout/toolbar_main"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorAvailable"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_anchor="@id/profileLayout"
        app:layout_anchorGravity="bottom|center"
        app:cardCornerRadius="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You're Currently Available"
            android:padding="7dp"/>
    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>
